<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <style type="text/css">
            .cancel-btn a{
                color : white;
                text-decoration: none;
            }
            .form-body {
                color: #eee;
                background: #121212;
                margin-left : 12labelx;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
            }
        </style>
    </head>
    <body class="form-body">
        <div class="container">
            <div>
                <% if (locals.errorMsg != null) { %>
                    <p><%= errorMsg %></p>
                <% } %> 
            </div>

            <h2>Add new artist</h2><br/>

            <form method="POST" action="/artists">
                <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Artist Name</label>
                <input required type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
                </div>
                <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Label Name</label>
                <input required type="text" class="form-control" id="exampleInputPassword1" name="label">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Number of Albums</label>
                    <input required type="number" class="form-control" id="exampleInputPassword1" name="no_of_albums">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="solo" id="flexRadioDefault1" value="Yes" checked>
                    <label class="form-check-label" for="flexRadioDefault1">
                        Solo Artist
                    </label>
                </div>
                    <div class="form-check">
                    <input class="form-check-input" type="radio" name="solo" id="flexRadioDefault2" value="No">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Group Artist
                    </label>
                </div><br/>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button class="btn btn-primary cancel-btn"><a href="/artists">Cancel</a></button>
            </form>
        </div>
    </body>
</html>