<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <style type="text/css">
            .form-body {
                color: #eee;
                background: #121212;
                margin-left : 12labelx;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
            }
            .cancel-btn a{
                text-decoration: none;
                color:white;
            }
        </style>
    </head>
    <body class="form-body">

        <div class="container">
        <div>
            <% if (locals.errorMsg != null) { %>
                <p><%=errorMsg%></p>
            <% } %>
        </div>
        
        <h2>Add new album</h2><br/>

        <form method="POST" action="/albums">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Album Name</label>
              <input required type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Artist Name</label>
              <input required type="text" class="form-control" id="exampleInputPassword1" name="artist">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Genre</label>
                <input required type="text" class="form-control" id="exampleInputPassword1" name="genre">
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Number of Songs</label>
                <input required type="text" class="form-control" id="exampleInputPassword1" name="no_of_songs">
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Release date</label>
                <input required type="date" class="form-control" id="exampleInputPassword1" name="release_date">
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-primary cancel-btn"><a href="/albums">Cancel</a></button>
          </form>
        
        </div>
    </body>
</html>